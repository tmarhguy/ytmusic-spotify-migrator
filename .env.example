# Environment Configuration for YT2Spot
# Copy this file to .env and configure with your credentials

# Spotify API Configuration (Required)
# Obtain credentials from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8002/api/auth/spotify/callback

# YouTube Music API Configuration (Future Implementation)
YTMUSIC_CLIENT_ID=your_youtube_music_client_id_here
YTMUSIC_CLIENT_SECRET=your_youtube_music_client_secret_here
YTMUSIC_REDIRECT_URI=http://localhost:8002/api/auth/youtube-music/callback

# Application Configuration
YT2SPOT_LOG_LEVEL=INFO
YT2SPOT_FUZZY_THRESHOLD=0.80
YT2SPOT_HARD_THRESHOLD=0.87
YT2SPOT_REJECT_THRESHOLD=0.60

# Development Configuration
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:8002