# Environment variables for YT2Spot
# Copy this file to .env and fill in your Spotify credentials

# Spotify API Credentials (required)
# Get these from https://developer.spotify.com/dashboard
YT2SPOT_CLIENT_ID=your_spotify_client_id_here
YT2SPOT_CLIENT_SECRET=your_spotify_client_secret_here

# Optional: Override default redirect URI
# YT2SPOT_REDIRECT_URI=http://localhost:8888/callback

# Optional: Custom cache file location
# YT2SPOT_CACHE_FILE=.cache-yt2spot

# Optional: Default playlist name
# YT2SPOT_PLAYLIST_NAME=YT Music Liked Songs

# Optional: Matching thresholds (0.0 - 1.0)
# YT2SPOT_HARD_THRESHOLD=0.87
# YT2SPOT_REJECT_THRESHOLD=0.60
# YT2SPOT_FUZZY_THRESHOLD=0.80

# Optional: Maximum candidates to consider per song
# YT2SPOT_MAX_CANDIDATES=5

# Optional: Logging directory
# YT2SPOT_LOG_DIR=logs
